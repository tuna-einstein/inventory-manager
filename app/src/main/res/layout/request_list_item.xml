<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:layout_margin="5dp"
    android:padding="8dp" >


    <!-- Item name -->
    <TextView
        android:id="@+id/item_display_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Item : "
        android:textSize="17dp"
        android:textStyle="bold" />

    <!-- Item name -->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_display_name_label"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_marginTop="1dip"
        android:layout_alignParentLeft="true"
        android:text="Requester : "
        android:textSize="15dip" />

    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:layout_below="@id/item_display_name_label"
        android:layout_toRightOf="@+id/description1_label"
        android:textSize="15dip" />


    <TextView
        android:id="@+id/units_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description1"
        android:layout_marginTop="1dip"
        android:layout_alignParentLeft="true"
        android:text="Units : "
        android:textSize="15dip" />


    <TextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:layout_below="@id/description1"
        android:layout_toRightOf="@+id/units_label"
        android:textSize="15dip" />

</RelativeLayout>