<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.usp.inventory.activity.AcceptOrderActivity">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:src="@drawable/placeholder"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp" />


    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item name"
        android:textSize="17sp"
        android:ems="10"
        android:layout_below="@+id/thumbnail"
        android:layout_alignStart="@+id/thumbnail">
        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/txt_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested Units : 10"
        android:textSize="17sp"
        android:textStyle="bold"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_item_name">
    </TextView>

    <TextView
        android:id="@+id/txt_requester_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_units"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:text="Requester : "
        android:ems="10" >
    </TextView>

    <TextView
        android:id="@+id/txt_requester_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_requester_label"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:text="abc@android.com"
        android:ems="10" >
    </TextView>

    <TextView
        android:id="@+id/txt_requester_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_requester_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:text="Sachin Tendulkar"
        android:ems="10" >
    </TextView>

    <Button
        android:id="@+id/button_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_requester_name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:text="Reject" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_requester_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="Accept" />
</RelativeLayout>
